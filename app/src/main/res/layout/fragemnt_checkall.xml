<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="checkalviewmodel"
            type="com.example.smartmatch.ui.checkAll.ui.CheckAllViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.choiceT.ChoiceTFragment">
        <FrameLayout
            android:id="@+id/choiceTFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/blue_light"
                android:baselineAligned="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/check"
                    android:textSize="30dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/area_name"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                    <TextView
                        android:id="@+id/checkall_areaname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="226房间"
                        android:textSize="30dp"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_c_num"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                    <TextView
                        android:id="@+id/checkall_acnum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21"
                        android:textSize="30dp"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/round_20"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_t_num"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                    <TextView
                        android:id="@+id/checkall_atnum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="30dp"
                        android:layout_margin="20dp"
                        android:textColor="#373737"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/round_20"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lights_text"
                        android:layout_gravity="center_horizontal"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        android:textColor="#373737"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round_20">
                        <Button
                            android:id="@+id/checkall_lihghton_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginLeft="200dp"
                            android:text="@string/light_are_on_full"
                            android:layout_gravity="center"/>
                        <Button
                            android:id="@+id/checkall_lihghtoff_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/light_are_off_full"
                            android:layout_gravity="center"/>
                        <Button
                            android:id="@+id/checkall_lihghtflashing_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginLeft="12dp"
                            android:text="@string/light_are_all_flashing"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/checkall_finish_bt"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Finish"
                    android:textSize="20dp"/>


            </LinearLayout>


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>