<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.smartmatch.ui.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_light"
        android:weightSum="5"
        tools:context=".ui.construction.ConstructionFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/blue_dark_plus"
                android:textSize="@dimen/app_text_size_normal"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:autoSizePresetSizes="@array/sizes"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/c_t"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/area_define_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:layout_marginStart="60dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/blue_dark_plus"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/scene_define"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:layout_gravity="center_vertical"
                android:layout_marginStart="60dp"
                android:gravity="center_vertical"
                android:textColor="@color/blue_dark_plus"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scene_definition"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/light_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4."
                android:layout_marginStart="60dp"
                android:gravity="center_vertical"
                android:textColor="@color/blue_dark_plus"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_control"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/collection_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5."
                android:layout_marginStart="60dp"
                android:textColor="@color/blue_dark_plus"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_scene"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                />

        </LinearLayout>

    </LinearLayout>
</layout>