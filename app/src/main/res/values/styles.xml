<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textView_normal">
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">@dimen/app_add_btn_text_padding</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/app_text_size_max</item>
        <item name="android:autoSizeMinTextSize">@dimen/app_text_size_min</item>
        <item name="android:autoSizeStepGranularity">1dp</item>
        <item name="android:layout_centerVertical">true</item>

    </style>
    <style name="btn_normal">
        <item name="android:textSize">@dimen/app_text_size_normal</item>
        <item name="android:padding">@dimen/app_add_btn_text_padding</item>
        <item name="android:layout_margin">@dimen/app_next_btn_margin_distance</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_marginVertical">10dp</item>


    </style>
    <style name="text_input_edit_layout_normal" >
        <item name="boxBackgroundColor">#F8F8F8</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorEnabled">true</item>
        <item name="counterTextColor">@color/black</item>

    </style>

</resources>